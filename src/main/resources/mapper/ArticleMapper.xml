<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pointedInquery.mapper.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pointedInquery.entity.Article">
        <id column="articleId" property="articleid" />
        <result column="title" property="title" />
        <result column="source" property="source" />
        <result column="paragraph_count" property="paragraphCount" />
        <result column="content" property="content" />
        <result column="translated_content" property="translatedContent" />
        <result column="level" property="level" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        articleId, title, source, paragraph_count, content, translated_content, level
    </sql>

</mapper>
